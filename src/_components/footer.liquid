      color: rgb(196, 179, 95);
      font-size: 1.2rem;
      cursor: pointer;
      width: 24px;
      text-align: center;
    }

    .progress-bar {
      position: relative;
      background: #444;
      height: 6px;
      border-radius: 8px;
      flex-grow: 1;
      cursor: pointer;
      overflow: hidden;
    }

    .progress-bar #progress {
      background: rgb(196, 179, 95);
      height: 100%;
      width: 0%;
      border-radius: 8px 0 0 8px;
      transition: width 0.1s linear;
    }

    .progress-bar #progress-text {
      position: absolute;
      top: -14px;
      width: 100%;
      text-align: center;
      color: rgb(196, 179, 95);
      font-family: monospace;
      font-size: 0.65rem;
      pointer-events: none;
    }

