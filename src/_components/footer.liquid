      opacity: 0;
      pointer-events: none;
      height: 0;
      overflow: hidden;
      margin: 0;
      padding: 0;
    }

    .audio-player.minimized .player-title {
      max-width: 280px;
      font-size: 0.85rem;
    }

    .audio-player.minimized .minimize-button i {
      transform: rotate(180deg);
    }

    .control-button {
      background: transparent;
