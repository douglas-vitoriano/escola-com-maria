    .audio-player {
      position: fixed;
      bottom: 0;
      left: 20px;
      background-color: rgba(0, 0, 0, 0.9);
      border: 1px solid rgb(196, 179, 95);
      border-radius: 10px;
      padding: 10px 12px;
      z-index: 9999;
      max-width: 360px;
      display: flex;
      flex-direction: column;
      gap: 4px;
      transition: height 0.3s, width 0.3s;
    }

    .player-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .player-title {
      color: rgb(196, 179, 95);
      font-size: 0.9rem;
      margin: 0;
      font-weight: bold;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 290px;
      cursor: pointer;
    }

    .minimize-button {
      background: transparent;
      border: none;
      color: rgb(196, 179, 95);
      font-size: 1rem;
      cursor: pointer;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
      transition: transform 0.3s;
    }

    .player-controls {
      display: flex;
      align-items: center;
      gap: 8px;
      transition: opacity 0.3s;
    }

    .audio-player.minimized {
      width: 306px;
      height: 32px;
      padding: 6px 12px;
    }

