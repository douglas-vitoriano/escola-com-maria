      height: 10px;
      background: rgb(196, 179, 95);
      border-radius: 50%;
      border: none;
      cursor: pointer;
    }

    @media (max-width: 600px) {
      .audio-player.minimized {
        width: 48px !important;
        height: 48px !important;
        padding: 4px !important;
