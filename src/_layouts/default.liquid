<!doctype html>
<html lang="pt-BR">
  <head>
    {% render 'head', metadata: site.metadata, title: data.title %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
  </head>

  <body class="{{ data.layout }} {{ data.page_class }} light-theme">
    {% render 'navbar', metadata: site.metadata, resource: resource %}

    <main>
      {{ content }}
    </main>

    <a href="#" class="back-to-top" title="Voltar ao Topo"> &#8679; </a>

    {% render 'footer', metadata: site.metadata %}
  </body>

  <style>
    :root {
      --gold: rgb(196, 179, 95);
      --dark: rgb(59, 59, 56);
      --black: black;
    }

    /* Garantir que o tema será sempre claro */
    body.light-theme {
      background-color: white;
      color: black;
    }

    strong {
      color: black !important;
    }

    /* Navbar */
    .navbar {
      background-color: black;
      height: auto;
      padding: 10px 20px;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
    }

    .navbar-brand .navbar-item {
      padding: 0;
    }

    .navbar-title {
      display: flex;
      align-items: center;
      gap: 20px;
      text-decoration: none;
    }

    .navbar-logo {
      height: 100px !important;
      width: auto !important;
      max-height: none !important;
      object-fit: contain;
      display: inline-block;
    }

    .brand-text {
      color: rgb(143, 133, 83);
      font-size: 40px;
      font-weight: bold;
      transition: all 0.3s ease;
    }

    .brand-text:hover {
      color: rgb(196, 179, 95);
      transform: scale(1.05);
      text-shadow: 1px 1px 3px rgba(255, 215, 0, 0.3);
    }

    .navbar-menu {
      align-items: center;
    }

    .navbar-item {
      color: rgb(196, 179, 95);
    }

    .navbar-item:hover {
      color: rgb(59, 59, 56);
    }

    /* Botão Instagram */
    {% comment %} .navbar-end .navbar-item:last-child {
      margin-left: 10px;
    } {% endcomment %}

    /* Botões */
    .custom-button {
      background-color: transparent;
      {% comment %} border: 2px solid rgb(196, 179, 95); {% endcomment %}
      color: rgb(196, 179, 95);
    }

    .custom-button:hover {
      background-color: rgb(59, 59, 56);
      color: black;
    }

    /* Menu burger responsivo */
    .navbar-burger {
      color: rgb(196, 179, 95);
    }

    /* Compensação para navbar fixa */
    body {
      padding-top: 120px;
      margin: 0;
    }

    /* Footer */
    .footer {
      background-color: black;
      padding: 20px;
      text-align: center;
    }

    .footer p {
      color: rgb(143, 133, 83);
      font-size: 1rem;
    }

    /* Textos e títulos */
    .custom-title {
      font-size: 60px;
      font-family: 'Georgia', serif;
      color: rgb(196, 179, 95);
      text-align: center;
      margin-bottom: 20px;
    }

    .custom-hero {
      font-size: 60px;
      font-family: 'Georgia', serif;
      color: rgb(196, 179, 95);
      text-align: center;
      margin-bottom: 20px;
    }

    @media screen and (max-width: 768px) {
      .custom-hero {
        font-size: 50px;
      }
    }

    @media screen and (max-width: 768px) {
      .custom-title {
        font-size: 24px;
      }
    }

    .custom-text {
      font-size: 20px;
      font-family: 'Georgia', serif;
      color: rgb(59, 59, 56);
      line-height: 1.6;
      text-align: justify;
    }

    ul.custom-text {
      list-style-type: disc;
      padding-left: 40px;
    }

    ul.custom-text li {
      margin-bottom: 10px;
    }

    /* Imagens dos santos */
    .saint {
      width: 400px !important;
      height: 400px !important;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 10px;
      margin-top: 5px;
    }

    .hero {
      width: 400px !important;
      height: 400px !important;
      object-fit: fill;
      border-radius: 10px;
      margin-bottom: 10px;
      margin-top: 5px;
    }

    .home-image {
      width: 100%;
      height: 100vh;
      border-radius: 0;
      margin-top: -50px;
      margin-left: -50px;
      margin-bottom: 50px;
      padding: 0;
    }

    .no-padding {
      padding: 0 !important;
      margin: 0 !important;
    }

    .content-section {
      background-color: white;
    }

    section.section.no-padding {
      padding: 0 !important;
      margin: 0 !important;
    }

    .back-to-top {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background-color: rgb(143, 133, 83);
      color: white;
      font-size: 24px;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      display: none;
      align-items: center;
      justify-content: center;
      text-align: center;
      text-decoration: none;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
      z-index: 999;
    }

    .back-to-top:hover {
      background-color: rgb(143, 133, 83);
      color: black;
    }

    input.input,
    textarea.textarea {
      background-color: white;
      color: black;
      border: 1px solid rgb(196, 179, 95);
    }

    input.input::placeholder,
    textarea.textarea::placeholder {
      color: gray;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const backToTop = document.querySelector('.back-to-top');

      if (backToTop) {
        backToTop.addEventListener('click', function (e) {
          e.preventDefault();
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        window.addEventListener('scroll', () => {
          if (window.scrollY > 100) {
            backToTop.style.display = 'flex';
          } else {
            backToTop.style.display = 'none';
          }
        });
      }
    });
  </script>
</html>
