---
layout: default
title: Contato
---
<section class="section">
  <section class="section main-content">
    <!-- Mostrar no Desktop -->
    <h1 class="custom-hero is-hidden-touch">Contato</h1>
    <div class="columns is-multiline mt-6 is-hidden-touch">
      <div class="column is-one-third has-text-centered">
        <figure class="image is-inline-block">
          <img class="hero" src="{{ '/images/slide_francisco.jpeg' | relative_url }}" alt="São Francisco">
        </figure>
      </div>
      <div class="column is-one-third has-text-centered">
        <figure class="image is-inline-block">
          <img class="hero" src="{{ '/images/slide_pio.jpeg' | relative_url }}" alt="São Pio">
        </figure>
      </div>
      <div class="column is-one-third has-text-centered">
        <figure class="image is-inline-block">
          <img class="hero" src="{{ '/images/slide_luis.jpeg' | relative_url }}" alt="São Luís">
        </figure>
      </div>
    </div>

    <!-- Mostrar apenas no Celular/Tablet -->
    <h1 class="custom-hero is-hidden-desktop" style="margin-top: -75px;">Contato</h1>
    <div class="is-hidden-desktop has-text-centered">
      <figure class="image is-inline-block">
        <img class="hero" src="{{ '/images/slide_cruz.jpeg' | relative_url }}" alt="Cruz">
      </figure>
    </div>

    <br>

    <div class="container">
      <h1 class="custom-title">Pedido de Oração ou Dúvidas</h1>
      <form action="{{ site.environment.FORMSPREE_URL }}" method="POST">
        <div class="field">
          <label class="label">Nome completo</label>
          <div class="control">
            <input
              class="input"
              type="text"
              name="nome"
              placeholder="Seu nome completo"
              required
              pattern="[A-Za-záéíóúÁÉÍÓÚãõáàâéêíóõô\s]+"
              title="Por favor, insira um nome válido"
              minlength="3"
            >
          </div>
        </div>

        <div class="field">
          <label class="label">Cidade e Estado</label>
          <div class="control">
            <input
              class="input"
              type="text"
              name="cidade"
              placeholder="Sua cidade e estado"
              required
              pattern="[A-Za-záéíóúÁÉÍÓÚãõáàâéêíóõô\s]+"
              title="Por favor, insira uma cidade válida"
              minlength="2"
            >
          </div>
        </div>

        <div class="field">
          <label class="label">Paróquia e Comunidade</label>
          <div class="control">
            <input
              class="input"
              type="text"
              name="paroquia"
              placeholder="Sua diocese, paróquia e comunidade"
              required
              pattern="[A-Za-záéíóúÁÉÍÓÚãõáàâéêíóõô\s]+"
              title="Por favor, insira o nome da paróquia"
              minlength="2"
            >
          </div>
        </div>

        <div class="field">
          <label class="label">Pedido de oração ou dúvida</label>
          <div class="control">
            <textarea
              class="textarea"
              name="mensagem"
              placeholder="Escreva aqui seu pedido ou dúvida..."
              required
            ></textarea>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-warning is-light custom-button" type="submit">Enviar</button>
          </div>
        </div>
      </form>
    </div>
  </section>
</section>
